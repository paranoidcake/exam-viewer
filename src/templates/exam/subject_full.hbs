{{#> entry}}
    {{#*inline "head"}}
        <title>{{heading}}</title>
        <link rel="stylesheet" href="/styles/subject.css">
    {{/inline}}
    {{#*inline "body"}}
        <section class="section">
            <h2 class="title is-2">{{heading}}</h2>

            <div class="table">
                {{#each contents as |level|}}
                    <h3 class="header-{{@index}} title is-3">{{level.[0]}}</h3>

                    <div class="content">
                        <ul style="margin-top: 0;">
                            {{#each level.[1] as |path|}}
                                <li><a href="/{{path}}">{{file-stem path}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                {{/each}}
            </div>
        </section>
    {{/inline}}
{{/entry}}